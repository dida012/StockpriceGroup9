    "### Flask Application Code (app.py)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 2,
   "id": "cc5d1882-7d65-4f42-8ae1-f9569fdbce6a",
   "metadata": {},
   "outputs": [],
   "source": [
    "from flask import Flask, request, jsonify\n",
    "import joblib\n",
    "import numpy as np\n",
    "\n",
    "# Initialize Flask app\n",
    "app = Flask(__name__)\n",
    "\n",
    "# Load trained model\n",
    "model = joblib.load(\"best_stock_price_model.pkl\")\n",
    "\n",
    "@app.route(\"/\")\n",
    "def home():\n",
    "    return \"Stock Price Prediction API is running\"\n",
    "\n",
    "@app.route(\"/predict\", methods=[\"POST\"])\n",
    "def predict():\n",
    "    data = request.get_json()\n",
    "\n",
    "    # Extract features\n",
    "    features = np.array([[\n",
    "        data[\"open\"],\n",
    "        data[\"high\"],\n",
    "        data[\"low\"],\n",
    "        data[\"volume\"],\n",
    "        data[\"vwap\"],\n",
    "        data[\"change\"],\n",
    "        data[\"changePercent\"]\n",
    "    ]])\n",
    "\n",
    "    # Make prediction\n",
    "    prediction = model.predict(features)\n",
    "\n",
    "    return jsonify({\n",
    "        \"predicted_closing_price\": float(prediction[0])\n",
    "    })\n",
    "\n",
    "if __name__ == \"__main__\":\n",
    "    app.run(debug=True)\n"
   ]
  },
